# Reglas para enviar apps al Scratchpad automáticamente
for_window [app_id="Thunar"] move scratchpad
for_window [app_id="librewolf"] move scratchpad
for_window [app_id="chromium"] move scratchpad

# Forzar que se abran con un tamaño cómodo y centrados
for_window [app_id="Thunar"] floating enable, resize set 1000 700, move position center
for_window [app_id="librewolf"] floating enable, resize set 1200 800, move position center
for_window [app_id="chromium"] floating enable, resize set 1200 800, move position center

# Evitar que la pantalla se apague si mpv está reproduciendo
for_window [class="mpv"] inhibit_idle visible

# Hacer que mpv sea flotante por defecto (opcional, útil para mini-reproductor)
# for_window [app_id="mpv"] floating enable

# Regla para que la ventana btop sea siempre flotante y tenga un tamaño concreto
for_window [app_id="btop_floating"] {
    floating enable
    resize set width 1100px height 800px
    move position center
    border pixel 2
}
